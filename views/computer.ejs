<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/static/css/header.css" />
    <link rel="stylesheet" href="/static/css/component.css" />
    <link rel="stylesheet" href="/static/css/footer.css" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <title>computer</title>

    <style>
      .header {
        background-color: white;
      }
      .mainContent {
        display: flex;
        width: 80%;
        height: 70vh;
        align-items: center;
        justify-content: center;
        margin: 50px auto;
      }

      .content-box {
        width: 45%;
        height: 100%;

        margin: 0 var(--space-1);
        background-color: var(--color-white-0);
        border: 1px solid var(--color-black-1);
        border-radius: var(--border-radius-medium);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
      }

      .content-box img {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        object-position: center top;
        filter: grayscale(30%);
      }

      .content img {
        font-weight: 700;
        transition: all 0.4s linear;
      }

      .content:hover img {
        filter: grayscale(200%);
      }

      .content a {
        transition: all 0.5s linear;
        font-weight: 700;
        font-size: 4rem;
        color: var(--color-white-0);
        text-shadow: var(--shadow);
      }

      .content:hover a {
        color: var(--color-white-0);

        opacity: 0;
      }

      .textButton {
        position: absolute;
        width: 100%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: var(--color-black-0);
        font-size: 0;
        font-weight: bold;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <header><%- include("./component/header")%></header>

    <main id="main">
      <section class="mainContent">
        <div class="content-box content">
          <img src="" alt="" class="keyboardContent" />
          <a href="/word/keyboard" class="textButton"> MZ어 타자연습 </a>
        </div>
        <div class="content-box content">
          <img src="" alt="" class="wordContent" />
          <a href="/word" class="textButton"> MZ어 단어장 </a>
        </div>
      </section>
    </main>

    <%- include("./component/footer")%>
    <script>
      async function logout(event) {
        event.preventDefault();
        const res = await axios({
          method: "post",
          url: "/logout",
        });
        swal("로그아웃 완료!", "", "success").then(function () {
          location.href = "/computer";
        });
      }

      const keyboardPng = "/static/css/img/keyboard.png";
      const keyboardGif = "/static/css/img/keyboard.gif";

      const KeyboardBox = document.querySelector(".keyboardContent");
      KeyboardBox.src = keyboardPng;

      KeyboardBox.addEventListener("mouseenter", function () {
        KeyboardBox.src = keyboardGif;
      });

      KeyboardBox.addEventListener("mouseleave", function () {
        KeyboardBox.src = keyboardPng;
      });

      const dictionaryPng = "/static/css/img/dictionary.png";
      const dictionaryGif = "/static/css/img/dictionary.gif";

      const wordBox = document.querySelector(".wordContent");
      wordBox.src = dictionaryPng;

      wordBox.addEventListener("mouseenter", function () {
        wordBox.src = dictionaryGif;
      });

      wordBox.addEventListener("mouseleave", function () {
        wordBox.src = dictionaryPng;
      });
    </script>
  </body>
</html>
